# MultiChain Docker environment (minimal example)
# Copy to .env and edit values before running: ./scripts/setup.sh

CHAIN_NAME=procuchain
RPC_USER=multichainrpc
RPC_PASSWORD=CHANGEME_REPLACE_WITH_SECURE_PASSWORD
MASTER_PORT=7447
RPC_PORT=8000

# RPC_HOST:
# - Local dev: set to 'localhost' so your browser can reach RPC at http://localhost:${RPC_PORT}
# - Production: keep as the compose service name (masternode) and do NOT expose the RPC port publicly
RPC_HOST=localhost

# RPC_ALLOWIP: restrict access in production (e.g. 127.0.0.1/32);
# 0.0.0.0/0 is only for local testing
RPC_ALLOWIP=0.0.0.0/0

# Explorer UI port
EXPLORER_PORT=2750
